simulate SIMULATE 
{
   anatomy = pioAnatomy;
   decomposition = grid;
   diffusion = FGR;
   reaction = TT04_CellML;
   stimulus = pointStimulus;
   sensor = pointSensor;
   loop = 0;            // in timesteps
   maxLoop = 6000000;
   dt = 0.005;           // msec
   time = 0;            // msec
   printRate = 10000;      // in timesteps
   snapshotRate = 1000000000; // in timesteps
}

pioAnatomy ANATOMY 
{
   method = pio;
   fileName = snapshot.initial/anatomy#;
   cellTypes = -1;
   dx = 0.1;   // in mm
   dy = 0.1;   // in mm
   dz = 0.1;   // in mm
   conductivity = uniform;
}

koradi DECOMPOSITION 
{
   method = koradi;
   verbose = 1;
   nCenters = 40;
   alpha = 0.5;
   maxVoronoiSteps = 100;
   maxSteps = 500;
   tolerance = 0.01;
   outputRate = 1;
   nbrDeltaR = 2;
}

grid DECOMPOSITION 
{
    method = grid;
    nx = 1;
    ny = 1;
    nz = 16;
    ninner = 2;
    threshold = 2;
    visgrid = 0;
}

FGR DIFFUSION
{
   method = FGR;
   diffusionScale = 250.0;      // mm^3/mF
}

conductivity CONDUCTIVITY
{
    method = fibre;
    sigmaLi = 0.0003;   // units S/mm
    sigmaTi = 0.00003;  // units S/mm
}

uniform CONDUCTIVITY
{
    method = uniform;
    sigma11 = 0.0;       // S/mm
    sigma22 = 0.0;       // S/mm
    sigma33 = 6.1728E-4; // S/mm
    sigma12 = 0.0;
    sigma13 = 0.0;
    sigma23 = 0.0;
}

jhu CONDUCTIVITY
{
    method = JHU;
    sigmaLi = 0.0000315; // S/mm
    sigmaTi = 0.0003;    // S/mm
    sheetAngle = 45;
    rotationMatrix = 1;
    homogeneousFiber = 0;
}

tenTusscher04 REACTION
{
    method = TT04_bb;
}

TT04_CellML REACTION
{
    method = TT04_CellML;
    integrator = rushLarsen;
}

TT06_CellML REACTION
{
    method = TT06_CellML;
    integrator = rushLarsen;
}

FHN REACTION
{
    method = FHN;
}

test STIMULUS
{
     method = test;
     rank = 0;
     cell = 0;
     vStim = -52; // mV/msec
     tStart = 1; // msec
     duration =1; // msec
     period = 1000; // msec
}

pointStimulus STIMULUS
{
  method = point;
  cell = 13;       // grid index of cell to stimulate
  period = 1000.0;  // msec
  duration = 2.0; // msec
  vStim = -100.0;  // mV/msec
  tStart = 10.0;  // time in msec of first stimulus 
//tf = 5000.0;  // no stimulus after this time (in msec)
}

boxStimulus STIMULUS
{
   method = box;
   yMax = 15;
   vStim = -40;
   tStart = 0;
   duration = 5;
   period = 1000;
}

pointSensor SENSOR
{
  method = pointList;
  pointList = 13 400 3604; // gids to print out (celltype must be nonzero, or no output)
  startTime = 0.0;   // in ms
  printRate = 100;    // in timesteps
  printDerivs = 1;   // print dVm terms in addition to Vm (default = 0, i.e. off)
  dirname = sensorData; // created if necessary
  filename = vm_vs_t_tt04_tab2_1-2;
}

activationTime SENSOR
{
   method = activationTime;
   filename = activtionTime;
   printRate = 100000;
   evalRate = 1;
}
